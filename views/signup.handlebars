<main class=" text-center form-signin">
        <form class="form signup-form">
            <h1 class="h3 mb-3 fw-normal">Please sign up</h1>
            
            <div class="form-floating">
                <input type="email" class="form-control" id="email-signup" placeholder="name@example.com">
                <label for="email-signup">Email address</label>
            </div>
            <div class="form-floating">
                <input type="password" class="form-control" id="password-signup" placeholder="Password">
                <label for="password-signup">Password</label>
            </div>
            <button class="w-100 btn btn-lg btn-primary" type="submit">Sign in</button>
            <br>
            <p class="h3 mb-3 fw-normal">Or sign in</p>
<button type="button" class="btn btn-primary btn-lg" id="signup"><a href="/login" style="color: white;">Sign-in</a></button>
        </form>
    </main>

    <script src="/js/signup.js"></script>